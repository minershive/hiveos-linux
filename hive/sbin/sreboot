#kill `ps -o pid= -N T | grep -v "^[[:blank:]]*$PID$"`

#kill -- -1
#sleep 2 # leave processes some time to exit cleanly on SIGTERM
#kill -s KILL -- -1 # removes the remaining processes or those
                   # that have started since without giving them
